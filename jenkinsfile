pipeline{
    agent any
    environment {
        VENV = 'venv'
    }
    stages{
        stage = {'Checkout'}{
            steps{git 'https://github.com/Ashley12345806/june25-classdemo2.git' //specify your repository URL here
            }
        }
        stage = {'Setup Virtual Environment'}{
            steps{
                sh '''python3 -m venv $VENV
                . $VENV/bin/activate
                pip install -r requirements.txt
                '''
            }
        }
        stage = {'Run Tests'}{
            steps{
                sh '''. $VENV/bin/activate
                pytest
                '''
            }
        }

    }
}